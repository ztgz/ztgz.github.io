<div class="hud">
	<div class="total-life">
		<div class="life" style="@GetStyle()">

		</div>
	</div>
</div>
<p class="score">@Score points</p>

@code {
	[Parameter]
	public ShipCore Core { get; set; } = null!;

	[Parameter]
	public int Score { get; set; }

	public string GetStyle()
	{
		return $"width: {Core.CurrentLife / (Core.MaxLife * 1.0d) * 100}%;"
			+ (Core.MaxLife == Core.CurrentLife 
				? "border-radius: 10px;"
				: "");
	}
}
