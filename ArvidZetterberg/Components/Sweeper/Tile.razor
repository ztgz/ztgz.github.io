<div class="tile @(Visible ? "visible" : "")" @onclick="HandleClick">
	@if (Visible && Related != 0)
	{
		@Related
	}
</div>
@code {
	[Parameter]
	public int Related { get; set; }

	[Parameter]
	public bool Visible { get; set; }

	[Parameter]
	public EventCallback OnClick { get; set; }

	void HandleClick()
	{
		if (Visible == false)
			OnClick.InvokeAsync();
	}
}
